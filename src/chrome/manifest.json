{
	"name": "Page Stat",
	"version": "0.0.1",
	"description": "Display time usage statistics for accessed pages",
	"manifest_version": 2,
	"permissions": ["tabs", "storage", "declarativeContent", "alarms"],

	"icons": {},

	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_icon": {
			"16": "images/graph_icon16.png",
			"32": "images/graph_icon32.png",
			"48": "images/graph_icon48.png",
			"128": "images/graph_icon128.png"
		},
		"default_title": "Page usage statistics",
		"default_popup": "popup.html"
	},

	"web_accessible_resources": [
		"pages.js"
	]
}
